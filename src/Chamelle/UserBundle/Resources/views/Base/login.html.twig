{% extends "ChamelleUserBundle::user.html.twig" %}

{% block title %}{{ parent() }} - Login{% endblock %}

{% block body %}
    
    {% if error %}
    <div class="alert alert-error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <label for="email">Email</label>
        <input type="email" id="email" name="_username" value="{{ last_username }}" autofocus/>

        <label for="password">Password</label>
        <input type="password" id="password" name="_password"/>
        <br />
        <button type="submit" class="btn btn-primary"> <i class="icon-user icon-white"></i> Sign in</button>
    </form>
    
    <p>
        <a href="{{ path('chamelle_lostpwd') }}">(forgot password?)</a>
    </p>
    
{% endblock %}